localhost {
	handle /api/* {
		reverse_proxy backend:8000
	}

	handle /* {
		root * /usr/src/game_3d

		@rootPath {
            path /
        }
        redir @rootPath /home
		
		try_files {path} /index.html
		file_server browse
	}

	handle_errors {
        @404 {
            expression {http.error.status_code} == 404
        }
        rewrite @404 /404.html
        file_server
    }
}